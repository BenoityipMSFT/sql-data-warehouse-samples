{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "defaultValue": "autoAccountName"
        },
        "logicalServerName": {
            "type": "string",
            "defaultValue": "sampleeqsvr"
        },
        "automationAccountSku": {
            "type": "string",
            "defaultValue": "Free"
        },
        "credentialName": {
            "type": "string",
            "defaultValue": "DefaultAzureCredential"
        },
        "autoUserName": {
            "type": "string",
            "defaultValue": "defaultUser"
        },
        "autoPassword": {
            "type": "string",
            "defaultValue": "P@ssword!"
        },
        "runbookName": {
            "type": "string",
            "defaultValue": "myrunbook123"
        },
        "runbookDescription": {
            "type": "string",
            "defaultValue": "blasdkg;laskdjg;aksldg"
        },
        "jobGuid": {
            "type": "string"
        },
        "scriptUri": {
            "type": "int",
            "defaultValue": 125
        }
    },
    "variables": {},
    "resources": [{
        "name": "[parameters('automationAccountName')]",
        "type": "Microsoft.Automation/automationAccounts",
        "apiVersion": "2015-01-01-preview",
        "location": "westcentralus",
        "tags": {},
        "properties": {
            "sku": {
                "name": "[parameters('automationAccountSku')]"
            }
        },
        "resources": [{
                "name": "[parameters('credentialName')]",
                "type": "credentials",
                "apiVersion": "2015-01-01-preview",
                "location": "westcentralus",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                ],
                "tags": {},
                "properties": {
                    "userName": "[parameters('autoUserName')]",
                    "password": "[parameters('autoPassword')]"
                }
            },
            {
                "name": "[parameters('runbookName')]",
                "type": "runbooks",
                "apiVersion": "2015-01-01-preview",
                "location": "westcentralus",
                "dependsOn": [
                    "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                ],
                "tags": {},
                "properties": {
                    "runbookType": "Script",
                    "logProgress": "false",
                    "logVerbose": "false",
                    "description": "[parameters('runbookDescription')]",
                    "publishContentLink": {
                        "uri": "[parameters('scriptUri')]",
                        "version": "1.0.0.0"
                    }
                }
            }
            // ,
            // {
            //     "name": "[parameters('jobGuid')]",
            //     "type": "jobs",
            //     "apiVersion": "2015-01-01-preview",
            //     "location": "westcentralus",
            //     "dependsOn": [
            //         "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
            //         "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/runbooks/',parameters('runbookName'))]"
            //     ],
            //     "properties": {
            //         "runbook": {
            //             "name": "[parameters('runbookName')]"
            //         }
            //     }
            // }
        ]
    }],
    "outputs": {}
}