{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "collation": {
            "type": "string"
        },
        "databaseName": {
            "type": "string"
        },
        "serverName": {
            "type": "string"
        },
        "serverLocation": {
            "type": "string"
        },
        "elasticPoolName": {
            "type": "string"
        },
        "poolEdition": {
            "type": "string",
            "defaultValue": "PremiumRS"
        },
        "poolDtu": {
            "type": "int"
        },
        "poolSize": {
            "type": "int"
        },
        "databaseDtuMin": {
            "type": "int"
        },
        "databaseDtuMax": {
            "type": "int"
        },
        "databaseCount": {
            "type": "int"
        }
    },
    "resources": [
        {
            "apiVersion": "2014-04-01",
            "location": "[parameters('serverLocation')]",
            "name": "[concat(parameters('serverName'), '/', parameters('elasticPoolName'))]",
            "properties": {
                "edition": "[parameters('poolEdition')]",
                "dtu": "[parameters('poolDtu')]",
                "storageMB": "[parameters('poolSize')]",
                "databaseDtuMin": "[parameters('databaseDtuMin')]",
                "databaseDtuMax": "[parameters('databaseDtuMax')]"
            },
            "type": "Microsoft.Sql/servers/elasticPools"
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2014-04-01-preview",
            "location": "[parameters('serverLocation')]",
            "name": "[concat(parameters('serverName'), '/', parameters('databaseName'), 'n', copyIndex())]",
            "dependsOn": [
                "[concat('Microsoft.Sql/servers/', parameters('serverName'), '/elasticpools/', parameters('elasticPoolName'))]"
            ],
            "properties": {
                "collation": "[parameters('collation')]",
                "elasticPoolName": "[parameters('elasticPoolName')]"
            },
            "copy": {
                "name": "spokeDbCopy",
                "count": 2
            }
        }
    ]
}